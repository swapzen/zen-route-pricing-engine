# =============================================================================
# ZEN ROUTE PRICING ENGINE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git - it contains sensitive secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# GOOGLE MAPS API
# -----------------------------------------------------------------------------
# Required for production route calculation
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# -----------------------------------------------------------------------------
# ROUTE PROVIDER STRATEGY
# -----------------------------------------------------------------------------
# Controls which route provider to use
# Options: 'google', 'local', 'haversine'
# - google: Use Google Maps Distance Matrix API (production)
# - local: Same as haversine (development)
# - haversine: Use Haversine formula fallback (development/testing)
ROUTE_PROVIDER_STRATEGY=google

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# CockroachDB connection string
# Format: postgresql://user:password@host:port/database?options
# Shared database with swapzen-api
DATABASE_URL=postgresql://root@localhost:26257/swapzen_development?sslmode=disable

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
# Redis connection for route caching
# Format: redis://host:port/db
# Optional: If not set, uses memory store (not recommended for production)
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# RAILS CONFIGURATION
# -----------------------------------------------------------------------------
# Rails environment: development, production, test
RAILS_ENV=development

# Secret key base for Rails sessions/cookies
# Generate with: rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# Number of Puma threads (affects database pool size)
RAILS_MAX_THREADS=5

# Server port (default: 3000, suggest 3001 for pricing engine)
PORT=3001

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error, fatal
RAILS_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OPTIONAL: FUTURE FEATURES
# -----------------------------------------------------------------------------
# JWT secret for admin authentication (TODO)
# JWT_SECRET=your_jwt_secret_here

# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# New Relic license key for monitoring
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
